{
  "compilerOptions": {
    "module": "ES6",
    "moduleResolution": "node",
    "baseUrl": ".",
    "paths": {
      "@/data/*": ["./src/data/*"],
      "@/features/*": ["./src/features/*"],
      "@/hooks/*": ["./src/hooks/*"],
      "@/pages/*": ["./src/pages/*"],
      "@/services/*": ["./src/services/*"],
      "@/styles/*": ["./src/styles/*"],
      "@/ui/*": ["./src/ui/*"],
      "@/utils/*": ["./src/utils/*"],
      "@/lib/*": ["./src/lib/*"]
    }
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
